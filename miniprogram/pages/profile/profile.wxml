<view class="peofile-container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo}}">
      <van-button wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile" round  plain type="primary">获取头像昵称</van-button>
      <van-button wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo" round plain type="primary">获取头像昵称</van-button>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>